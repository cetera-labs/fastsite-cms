{
  "name": "Cetera",
  "namespace": "Cetera",
  "version": "1.0.0.0",
  "framework": "ext",
  "template": "classicdesktop",
  "indexHtmlPath": "index.html",
  "requires": [
    "font-awesome",
    "ux"
  ],

  "builds": {
    "desktop": {
      "toolkit": "classic",
      "theme": "theme-triton",
      "sass": {
        "generated": {
          "var": "${build.id}/sass/save.scss",
          "src": "${build.id}/sass/save"
        }
      }
    }
  },

  "classpath": ["app/shared/src","app/${build.id}/src"],
  "overrides": ["app/shared/overrides","app/${build.id}/overrides"],

  "sass": {
    "namespace": "Cetera",
    "etc": [
      "sass/etc/all.scss"
    ],
    "var": [
      "app/shared/sass/var.scss",
      "app/${build.id}/sass/var.scss"
    ],
    "src": [
      "app/shared/src/sass/src.scss",
      "app/${build.id}/sass/src.scss"
    ]
  },

  "resources": [
    { "path": "resources", "output": "shared" }

    ,{ "path": "resources/${build.id}" }

  ],

  "output": {
    "base": "${workspace.build.dir}",
    "page": "ui.html",
    "manifest": "cms/ui/generatedFiles/${build.id}.json",
    "js": "cms/ui/generatedFiles/app.js",
    "appCache": {"enable": false},
    "resources": {
      "path": "cms/ui/resources",
      "shared": "cms/ui/resources"
    }
  },
  
  "fashion": {
    "missingParameters": "error",
    "inliner": {"enable": false}
  },

  "js": [
    {
      "path": "app.js",
      "bundle": true
    }
  ],

  "classic": {"js": []},
  "modern": {"js": []},

  "css": [
    {
      "path": "${build.out.css.path}",
      "bundle": true,
      "exclude": ["fashion"]
    }
  ],
  "loader": {
    "cache": false,
    "cacheParam": "_dc"
  },
  "production": {
    "output": {
      "appCache": {
        "enable": true,
        "path": "cache.appcache"
      }
    },
    "loader": {
      "cache": "${build.timestamp}"
    },
    "cache": {
      "enable": true
    },
    "compressor": {
      "type": "yui"
    }
  },
  "testing": {},
  "development": {
    "watch": {
      "delay": 250
    }
  },
  "bootstrap": {
    "base": "${app.dir}/generatedFiles",
    "manifest": "${build.id}.json",
    "microloader": "bootstrap.js",
    "css": "bootstrap.css"
  },

  "cache": {
    "enable": false,
    "deltas": false
  },

  "appCache": {
    "cache": ["index.html"],
    "network": ["*"],
    "fallback": []
  },


  "archivePath": false,

  "ignore": ["(^|/)CVS(/?$|/.*?$)"],
  "id": "fe7642bb-abb4-476e-9cf3-00467c3fe18b"
}
